<%= form_with(model: [@calendar, event]) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label :starts_at %>
    <%= form.datetime_select :starts_at %>
  </div>

  <div class="form-group">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at %>
  </div>

  <div class="d-flex flex-col justify-content-center align-items-center">
      <%= form.submit class: 'btn btn-lg btn-block btn-primary' %>
      <%= link_to :back, class: 'btn btn-lg btn-block btn-outline-danger' do %>
        <%= icon('skip-backward-btn') %> Back
      <% end %>

  </div>
<% end %>
